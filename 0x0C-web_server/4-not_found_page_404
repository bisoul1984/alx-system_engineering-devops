#!/bin/bash
# Configures Nginx to serve a custom 404 page with "Ceci n'est pas une page."

# Install Nginx if it isn't already installed
apt-get update -y
apt-get install -y nginx

# Ensure Nginx is running
service nginx start || true

# Create a custom 404 page
echo "Ceci n'est pas une page" > /usr/share/nginx/html/custom_404.html

# Backup the original Nginx server block configuration
cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Configure Nginx to use the custom 404 page
sed -i '/error_page 404 /c\ \t error_page 404 /custom_404.html;' /etc/nginx/sites-available/default
sed -i '/server_name _;/a \\t location = /custom_404.html {' /etc/nginx/sites-available/default
sed -i '/server_name _;/a \\t\t root /usr/share/nginx/html;' /etc/nginx/sites-available/default
sed -i '/server_name _;/a \\t\t internal;' /etc/nginx/sites-available/default
sed -i '/server_name _;/a \\t }' /etc/nginx/sites-available/default

# Reload Nginx to apply the changes
service nginx reload

