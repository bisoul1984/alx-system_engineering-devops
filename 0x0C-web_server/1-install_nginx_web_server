#!/bin/bash
# Install Nginx on Ubuntu and configure it to serve a custom HTML page

# Update package list
apt-get update -y

# Install Nginx
apt-get install nginx -y

# Ensure Nginx is started
service nginx start

# Replace the default Nginx landing page
echo "Hello World!" > /var/www/html/index.nginx-debian.html

# Use sed to ensure Nginx listens on port 80 (default configuration should already do this)
sed -i '/listen 80 default_server;/c\listen 80;' /etc/nginx/sites-available/default

# Restart Nginx to apply the changes (without using systemctl)
service nginx restart

